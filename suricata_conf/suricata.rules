# Detect Pings
alert icmp any any -> any any (msg:"ICMP Ping Detected"; sid:1000001; rev:1;)

# Detect Nmap Scans
alert tcp any any -> any 80 (msg:"Potential Nmap Scan"; flags:S; threshold:type both, track by_src, count 20, seconds 10; sid:1000002; rev:1;)

# Detect Admin Access
alert http any any -> any any (msg:"Suspicious Admin Access Attempt"; http.uri; content:"/admin"; sid:1000003; rev:1;)

# Detect Login Access
alert http any any -> any any (msg:"Suspicious Login Access Attempt"; http.uri; content:"/login"; sid:1000004; rev:1;)

# Detect SQL Injection Attempts
alert http any any -> any any (msg:"SQL Injection Attack Detected"; flow:established,to_server; http.uri; content:"union"; nocase; pcre:"/union.+select/i"; sid:1000005; rev:1;)
alert http any any -> any any (msg:"SQL Injection Attack Detected - OR 1=1"; flow:established,to_server; http.uri; content:"or"; nocase; content:"="; pcre:"/or\s+.*\s*=\s*/i"; sid:1000006; rev:1;)
alert http any any -> any any (msg:"SQL Injection Attack Detected - DROP TABLE"; flow:established,to_server; http.uri; content:"drop"; nocase; content:"table"; nocase; sid:1000007; rev:1;)

# Detect Directory Traversal Attempts
alert http any any -> any any (msg:"Directory Traversal Attack Detected"; flow:established,to_server; http.uri; content:"../"; sid:1000008; rev:1;)
alert http any any -> any any (msg:"Directory Traversal Attack Detected - Encoded"; flow:established,to_server; http.uri; content:"%2e%2e%2f"; nocase; sid:1000009; rev:1;)
alert http any any -> any any (msg:"Directory Traversal Attack - /etc/passwd"; flow:established,to_server; http.uri; content:"/etc/passwd"; sid:1000010; rev:1;)

# Detect Brute Force Authentication Attempts
alert http any any -> any any (msg:"Brute Force Attack - Multiple Login Attempts"; flow:established,to_server; http.uri; content:"/login"; http.method; content:"POST"; threshold:type both, track by_src, count 10, seconds 30; sid:1000011; rev:1;)
alert http any any -> any any (msg:"Brute Force Attack - Multiple Failed Auth"; flow:established,to_server; http.uri; content:"/auth"; threshold:type both, track by_src, count 15, seconds 60; sid:1000012; rev:1;)
